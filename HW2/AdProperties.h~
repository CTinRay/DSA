class Database::AdProperties{
public:
	AdProperties();
	void insert(ulli URL , ushort adverID , uint keyword , uint title , uint description);
	void printProperties();			
private:
	struct Property{
		ulli URL;
		ushort adverID;
		uint keyword;
		uint title;
		uint description;
		bool operator == ( const Property p )const{
			if( URL == p.URL &&
			    adverID == p.adverID &&
			    keyword == p.keyword &&
			    title == p.title &&
			    description == p.description ){
				return true;
			}
			return false;
		}
	};

	struct propertyCmp{
		bool operator()(const Property&p1, const Property&p2)const{				
			if( p1 == p2 ){
				return false;
			}
			if( p1.URL < p2.URL ){
				return true;
			}else{
				return false;
			}
			if( p1.adverID < p2.adverID ){
				return true;
			}else{
				return false;
			}
			if( p1.keyword < p2.keyword ){
				return true;
			}else{
				return false;
			}
			if( p1.title < p2.title ){
				return true;
			}else{
				return false;
			}
			if( p1.description < p2.description ){
				return true;
			}else{
				return false;
			}
		}		
	};
	std::set<Property,propertyCmp> propertySet;		

};
